{
  "routes": [
    {
      "uri": "/admin/login",
      "method": "POST",
      "header": {
        "content-type": "application/json"
      },
      "body": {"username": "string", "password": "string"},
      "response": {
        "message": "OK",
        "header": "Bearer <User JWT>",
        "status_code": 200
      }
    },
    {
      "uri": "/user",
      "method": "POST",
      "header": {
        "authorization": "Bearer <Admin JWT>",
        "content-type": "application/json"
      },
      "body": {"count": "integer"},
      "response": {
        "message": "OK",
        "status_code": 201
      }
    },
    {
      "uri": "/user/login",
      "method": "POST",
      "header": {
        "content-type": "application/json"
      },
      "body": {"id": "integer"},
      "response": {
        "message": "OK",
        "header": "Bearer <User JWT>",
        "status_code": 200
      }
    },
    {
      "uri": "/user/:id",
      "method": "GET",
      "response": {
        "message": "{id, point}",
        "status_code": 200
      }
    },
    {
      "uri": "/user/all",
      "method": "GET",
      "response": {
        "message": "[{id, point}]",
        "status_code": 200
      }
    },
    {
      "uri": "/tenant",
      "method": "POST",
      "header": {
        "authorization": "Bearer <Admin JWT>",
        "content-type": "application/json"
      },
      "body": {"name": "string", "detail_name": "string", "password": "string", "point": "integer"},
      "response": {
        "message": "OK",
        "status_code": 201
      }
    },
    {
      "uri": "/tenant/login",
      "method": "POST",
      "header": {
        "content-type": "application/json"
      },
      "body": {"name": "string", "password": "string"},
      "response": {
        "message": "OK",
        "header": "Bearer <Tenant JWT>",
        "status_code": 200
      }
    },
    {
      "uri": "/tenant/:name",
      "method": "GET",
      "response": {
        "message": "{name, detail_name, point}",
        "status_code": 200
      }
    },
    {
      "uri": "/item",
      "method": "POST",
      "header": {
        "authorization": "Bearer <Admin JWT>",
        "content-type": "application/json"
      },
      "body": {"name": "string", "price": "integer", "tenant": "string", "stock": "integer"},
      "response": {
        "message": "OK",
        "status_code": 201
      }
    },
    {
      "uri": "/item",
      "method": "GET",
      "response": {
        "message": "[{name, price, tenant, stock, max_stock}]",
        "status_code": 200
      }
    },
    {
      "uri": "/transaction/point",
      "method": "POST",
      "header": {
        "authorization": "Bearer <Tenant JWT>",
        "content-type": "application/json"
      },
      "body": {"tenant_name": "string", "user_id": "string", "point": "integer"},
      "response": {
        "message": "{type, tenant, user_id, user_id, point, created_at}",
        "status_code": 201
      }
    },
    {
      "uri": "/transaction/item",
      "method": "POST",
      "header": {
        "authorization": "Bearer <Admin JWT>",
        "content-type": "application/json"
      },
      "body": {"item_id": "string", "user_id": "string", "quantity": "integer"},
      "response": {
        "message": "{type, item, tenant, user_id, user_id, quantity, total_price, created_at}",
        "status_code": 201
      }
    },
    {
      "uri": "/transaction/user/:id",
      "method": "GET",
      "response": {
        "message": "<list of transaction>",
        "status_code": 200
      }
    }
  ]
}
